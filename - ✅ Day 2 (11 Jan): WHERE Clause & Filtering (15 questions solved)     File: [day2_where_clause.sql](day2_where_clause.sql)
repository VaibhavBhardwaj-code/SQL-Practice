CREATE DATABASE practice_work;
USE practice_work;

CREATE TABLE employees (
    id INT PRIMARY KEY,
    name VARCHAR(50),
    age INT,
    salary INT,
    city VARCHAR(50),
    department VARCHAR(50)
);

INSERT INTO employees VALUES
(1, 'Amit', 28, 65000, 'Delhi', 'IT'),
(2, 'Priya', 25, 55000, 'Mumbai', 'HR'),
(3, 'Rahul', 32, 75000, 'Bangalore', 'Marketing'),
(4, 'Sneha', 24, 48000, 'Delhi', 'IT'),
(5, 'Vikash', 30, 70000, 'Pune', 'Sales'),
(6, 'Anjali', 27, 60000, 'Mumbai', 'Finance'),
(7, 'Rohan', 29, 68000, 'Bangalore', 'IT'),
(8, 'Kavya', 26, 52000, 'Delhi', 'HR');

-- Question-1: Delhi mein rehne wale saare employees select karo.

SELECT * FROM employees WHERE city IN("Delhi");

-- Question-2: Salary 60000 se zyada wale employees ki list.

SELECT * FROM employees WHERE salary > 60000;	 

-- Question-3: Age 25 se kam ya 30 se zyada wale.

SELECT * FROM employees WHERE (age < 25 or age > 30);

-- Question-4: Department 'IT' ya 'HR' wale employees.

SELECT * FROM employees WHERE department IN ('IT','HR');

-- Question5: Name 'A' se shuru hone wale.

SELECT * FROM employees WHERE name like 'A%'; 

-- Question-6: Salary 50000 aur 70000 ke beech wale.

SELECT * FROM employees WHERE salary BETWEEN 50000 AND 70000;

-- Question-7: City 'Delhi' ya 'Mumbai' nahi rehne wale.

SELECT * FROM employees WHERE city NOT IN ("Delhi","Mumbai"); 

-- Question-8: Salary NULL wale employees.

SELECT * FROM employees WHERE salary IS NULL;

-- Question-9: Age 25 aur department 'IT' dono condition wale.

SELECT * FROM employees WHERE age = 25 AND department = 'IT';

-- Question-10: Salary 60000 se kam ya city 'Bangalore' wale.

SELECT * FROM employees WHERE salary < 60000 OR city = "Bangalore"; 

-- Question-11: Name mein 'a' letter wale.
SELECT * FROM employees WHERE name like '%A%';

-- Question-12: Salary 55000 se zyada aur age 28 se kam.

SELECT * FROM employees WHERE salary > 55000 AND age < 28; 

-- Question-13: Department 'Sales' nahi wale.

SELECT * FROM employees WHERE department NOT IN ('sales');

-- Question-14: Name 'R' se shuru aur salary 60000 se zyada.

SELECT * FROM employees WHERE name LIKE 'R%' AND salary > 60000;

-- Question-15: Age 25-30 ke beech aur city 'Delhi' ya 'Pune'.

SELECT * FROM employees WHERE age BETWEEN 25 AND 30 AND city IN ('Delhi','Pune');
